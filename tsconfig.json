{
  "compilerOptions": {
    "jsx": "react",
    "target": "ES2016",
    "module": "ES2022",
    "outDir": "dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "moduleResolution": "Node16",
    "skipLibCheck": true,
    "typeRoots": ["./src/@types", "./node_modules/@types"]
  }
}